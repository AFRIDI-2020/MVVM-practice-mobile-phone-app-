<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/android_version_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="android version"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/android_version_name_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/android_version_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/api_level_TV"
        app:layout_constraintStart_toEndOf="@id/android_version_TV"
        app:layout_constraintTop_toTopOf="@id/android_version_TV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/api_level_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="api level"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/android_version_name_TV"
        app:layout_constraintTop_toTopOf="@id/android_version_name_TV" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/api_level_TV" />


</androidx.constraintlayout.widget.ConstraintLayout>